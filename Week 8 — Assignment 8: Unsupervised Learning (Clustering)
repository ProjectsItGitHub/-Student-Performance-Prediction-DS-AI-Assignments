import pandas as pd
from sklearn.cluster import KMeans
from sklearn.decomposition import PCA
import matplotlib.pyplot as plt

df = pd.read_csv("StudentsPerformance_Cleaned.csv") if os.path.exists("StudentsPerformance_Cleaned.csv") else data.copy()

# Use numeric score columns for clustering
X = df[['math_score','reading_score','writing_score']].copy()

# KMeans
kmeans = KMeans(n_clusters=3, random_state=42)
clusters = kmeans.fit_predict(X)
df['cluster'] = clusters

# PCA to 2D for visualization
pca = PCA(n_components=2)
X_pca = pca.fit_transform(X)

plt.figure(figsize=(6,5))
scatter = plt.scatter(X_pca[:,0], X_pca[:,1], c=clusters)
plt.title("K-Means Clusters (3) projected via PCA")
plt.xlabel("PC1")
plt.ylabel("PC2")
plt.show()

# Show cluster centers in original score space
centers = kmeans.cluster_centers_
print("Cluster centers (math, reading, writing):\n", centers)
